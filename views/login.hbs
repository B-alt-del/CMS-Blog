{{#if errors}}
  <div class="errors">
    {{#each errors}}
      <p class="error">{{this}}</p>
    {{/each}}
  </div>
{{/if}}

<body>
    <div class="container">
    <div class="row center-align">
        <div class="col s12 l10">
        <div class="card">
            <div class="card-image">
            </div>
            <div class="card-content">
            <form action="/auth/login" method="post">
                <h3>Login</h3>
                <input class="style_input" name="username" type="username" placeholder="Enter your username address">
                <input name="password" type="password" placeholder="Enter your password">
                <button class="waves-effect waves-light orange lighten-2 btn blue-text text-darken-2">Submit</button>
            </form>
            </div>
        </div>
        </div>
    </div>
    </div>
</body>