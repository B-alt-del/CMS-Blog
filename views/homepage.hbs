{{#each posts as |post|}}


<div>
    <div class="card">
        <div class= "card-content">
            <h5>{{post.title}} </h5>
        
            <p>{{post.content}} </p>
            <p>created by:{{post.user.username}} </p>
        </div>
    </div>
</div>



{{else}}
<h6 class="pb-4 has-text-centered is-italic">there are currently no posts</h6>
{{/each}}