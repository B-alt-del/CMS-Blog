{{#if isLoggedIn}}
    {{#each posts as |post|}}
        <div>
            <div class="card">
                <div class="card-content hoverable modal-trigger" href="#Hmodal{{post.id}}">
                    <h5>{{post.title}} </h5>
                    <div class="right">
                        <p>{{post.date_created}}</p>
                    </div>
                </div>
                <div id="Hmodal{{post.id}}" data-id="{{post.id}}" class="modal">
                    <div class="modal-content">
                        <div style="display: flex; justify-content:space-between ">
                            <h5>{{post.title}} </h5>
                            <p style="color:rgb(80, 15, 141)">By: {{post.user.username}}</p>
                        </div>
                        <div class="card" style="height: 150px; display:coloumn; align:table-column">
                            <p style="padding:1% 0% 0% 1%; font-size:larger; color:rgb(80, 15, 141) ">"{{post.content}}" </p>
                            <p class="right" style="padding-top: 5%; padding-right: 2%; color:blueviolet">{{post.date_created}}</p>

                        </div>
                        <p style=" color:rgb(80, 15, 141)" >Comments:</p>
                        {{#each post.comments as |comment|}}
                            <div class="card column">
                                <div class="card-content hoverable homepage_card" >
                                    <div>
                                    <p>"{{comment.content}}" </p>
                                    <p class="right">-{{comment.user.username}}</p>                          
                                    </div>
                                        <p class="right" style="padding-top: 5%; color:blueviolet">{{comment.date_created}}</p>
                                </div>
                            </div>
                        {{else}}
                            <h6 class="pb-4 has-text-centered is-italic">CURRENTLY NO COMMENTS</h6>
                        {{/each}}
                        <form action="/posts/create-comment/{{post.id}}" method="post">
                            <input id="input_content" type="text" name="content"  placeholder="Leave a Comment Here">
                            <button id="comment_btn{{post.id}}" href="#" class="deep-purple lighten-3 waves-effect waves-light btn-large left">Leave Comment</button>
                        </form>
                        <button class="deep-purple lighten-3 waves-effect waves-light btn-large right modal-close" >close</button>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <h6 class="pb-4 has-text-centered is-italic">CURRENTLY HAVE NO POSTS</h6>
    {{/each}}
